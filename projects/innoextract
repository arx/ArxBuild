#!/bin/bash

# What is the project called
project_name='innoextract'

# Some additional arx-specific build options
cmake_options[debugout]='-DDEBUG=1'
cmake_options[xtra]='-DDEBUG_EXTRA=1'
cmake_options[nolzma]='-DUSE_LZMA=0'
cmake_options[style]="${cmake_options[debug]}"
cmake_options[winstyle]="${cmake_options[debug]}"

# Compiler for builds that test library/config compatability
default_compiler='gcc-4.8'

# Finally, define the used build types.
# Each build type is an underscore-seperated list of tokens defined in
# cmake_options, compiler_options and make_options.
build_types=(
	
	# Test different compilers/stdlibs and versions
	
	'clang-3.1_libcxx_debug'
	'clang-3.1_libcxx'
	
	'clang-3.2_libcxx_debug'
	'clang-3.2_libcxx'
	
	'clang-3.3_libcxx_debug'
	'clang-3.3_libcxx'
	
	'clang-3.4_libcxx_debug'
	'clang-3.4_libcxx'
	
	'clang-dev_libcxx_debug'
	'clang-dev_libcxx'
	
	'clang-dev_libcxx_m32_debug'
	
	'clang_libstdcxx_debug'
	'clang_libstdcxx'
	
	'ekopath_debug'
	'ekopath'
	
	'icc_debug'
	'icc'
	
	'gcc-4.1_debug'
	'gcc-4.1'
	
	'gcc-4.3_debug'
	'gcc-4.3'
	
	'gcc-4.4_debug'
	'gcc-4.4'
	
	'gcc-4.5_debug'
	'gcc-4.5'
	
	'gcc-4.6_debug'
	'gcc-4.6'
	
	'gcc-4.7_debug'
	'gcc-4.7'
	
	'gcc-4.8_debug'
	'gcc-4.8'
	
	'gcc-4.9_debug'
	'gcc-4.9'
	
	'gcc-4.10_debug'
	'gcc-4.10'
	
	'mingw_debug'
	'mingw'
	
	'msvc-9.0-32'
	'msvc-10.0-32'
	'msvc-11.0-32'
	'msvc-12.0-32'
	'msvc-12.0-64_debugout' # for _debug we would need proper debug versions of all libs
	
	# Test different build types
	
	$default_compiler'_xtra'
	
	$default_compiler'_static'
	
	$default_compiler'_debug_nolzma'
	
	# Test different architectures
	
	$default_compiler'_m32_debug'
	$default_compiler'_m32'
	
	'gcc-freebsd-9.1-i686_static'
	
	'gcc-armv6j-hf_static'
	
	# Test different library versions
	
	$default_compiler'_debug_boost-1.37'
	$default_compiler'_debug_boost-1.39'
	$default_compiler'_debug_boost-1.41'
	$default_compiler'_debug_boost-1.42'
	$default_compiler'_debug_boost-1.45'
	$default_compiler'_debug_boost-1.46'
	$default_compiler'_debug_boost-1.47'
	$default_compiler'_debug_boost-1.48'
	$default_compiler'_debug_boost-1.49'
	$default_compiler'_debug_boost-1.50'
	$default_compiler'_debug_boost-1.51'
	$default_compiler'_debug_boost-1.52'
	$default_compiler'_debug_boost-1.53'
	$default_compiler'_debug_boost-1.54'
	$default_compiler'_debug_boost-1.55'
	
	$default_compiler'_libiconv'
	$default_compiler'_olddeps'
	
	# Static analyzers and style checks
	
	'clang-analyzer'
	
	'cppcheck'
	
	'flawfinder'
	
	# TODO 'include-what-you-use'
	
	'style'
	
	'doxygen'
	
)

ignore_config_warnings['*nolzma*']='CMake Warning' # A warning is expeded here

favicons['../images/favicon.ico']=''
favicons['../images/logo.png']='128x128'
favicons['../images/favicon.png']='16x16'
